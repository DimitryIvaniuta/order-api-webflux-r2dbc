{
  "info": {
    "_postman_id": "0d72a579-6736-433c-b2b5-efd558507411",
    "name": "order-api-webflux-r2dbc",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Order API (WebFlux + R2DBC + Flyway)."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "email",
      "value": "a@x.com"
    }
  ],
  "item": [
    {
      "name": "Health (basic)",
      "item": [
        {
          "name": "GET Base (should 404 or default)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders?email=a@x.com",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ""
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "POST Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('Has id', function(){ pm.expect(json.id).to.be.ok; });",
                  "pm.collectionVariables.set('orderId', json.id);",
                  "pm.collectionVariables.set('email', json.customerEmail);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerEmail\": \"{{email}}\",\n  \"totalAmount\": 12.34\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders"
              ]
            }
          }
        },
        {
          "name": "GET Order By Id",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get('orderId')) {",
                  "  throw new Error('orderId is empty. Run \"POST Create Order\" first.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "{{orderId}}"
              ]
            }
          }
        },
        {
          "name": "GET Orders By Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders?email={{email}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders"
              ],
              "query": [
                {
                  "key": "email",
                  "value": "{{email}}"
                }
              ]
            }
          }
        },
        {
          "name": "PATCH Update Status (PAID)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get('orderId')) {",
                  "  throw new Error('orderId is empty. Run \"POST Create Order\" first.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"PAID\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "{{orderId}}",
                "status"
              ]
            }
          }
        },
        {
          "name": "Negative: POST Create Order (validation error)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerEmail\": \"not-an-email\",\n  \"totalAmount\": -1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders"
              ]
            }
          }
        },
        {
          "name": "Negative: GET Order Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/99999999",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "99999999"
              ]
            }
          }
        }
      ]
    }
  ]
}